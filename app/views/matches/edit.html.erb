<h1><%= I18n.t('pages.matches.edit.title') %></h1>
<%= form_with model: @match do |form| %>
    <div>
        <%= form.label :home_score %>
        <br/>
        <%= form.number_field :home_score %>
    </div>

    <div>
        <%= form.label :away_score %>
        <br/>
        <%= form.number_field :away_score %>
    </div>

    <div>
        <%= form.label :status %>
        <br/>
        <%= form.select :status, Match.statuses_i18n.invert %>
    </div>

    <br/>
    <div>
        <%= form.submit %>
    </div>
<% end %>
<%= link_to I18n.t('actions.back'), match_path(@match) %>
